@import 'normalize'
//common use
.contenedor
  display: flex;
  justify-content: center;

body
  background: black
  position: relative;
  background-image: url('../images/3.jpg')
  background-position: 0 0%;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-attachment: fixed;
  font-family:  'Open Sans Condensed', sans-serif;



// Empieza
// Header
.header

.portada,.background
  background: rgba(0,0,0,0.1);
  overflow: visible;
  margin-bottom: auto;

.header img
  max-width: 800px;
.menu
  padding-top: 30px;
  margin-top: 100px;
  max-width: 800px;
  display: inline-block;
  position: absolute;
  li
    height: 0px;
    display: inline-block;
    padding: 0 20px;
    cursor: pointer;
  a
    text-decoration: none;

    p
      color: rgb(204 , 229, 255);
      font-size: 30px
      cursor: pointer;
    p:hover
      color: white
.background-responsive
  visibility: hidden;
//Body
.puntos_slider
  position: fixed;
  top: 0
  left: 1%
  display:flex;
  cursor: pointer;
  img
    width: 1.5%
    height: 1.5%
    padding: 5px


// Footer
footer
  transition-property: transform
  transition: width 3s;
  width: 100%
  padding: 5px 20px;
  background: rgba(0,0,0,0.6);
  border: 2px solid lightblue;
  border-radius: 20px;
  position: fixed;
  bottom: 0
  left: auto;
  font-size: 20px;
  // font-style: italic;
  color: white;

.contenedor__footer
  display: flex;
  justify-content: space-between;

.contenedor__footer.logotipo img
  width: 200px;

.contacto
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 50px;

  a
    font-style: italic;
    text-decoration: none;
    cursor: pointer;
    color: rgb(204 , 229, 255);
    text-shadow: rgb(160,160,160);

  a:hover
    color: white;

.redes
  a
    img
      width:  40px;
      height: 40px;
      padding: 3px;

footer:hover
  background: rgba(0,0,0,0.8);
footer:active
  visibility: hidden;

footer:target
  visibility:visible; ;
  // http://tucual.com/

@media screen and (max-width: 800px)
  .contenedor
    width: auto;
    max-width: 800px;
  .header
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0
    img
      width:400px;
  .menu
    margin-top: 0px;
    position: relative;
    top: -20px;
    ul
      margin: 0
  .menu ul li a p
    margin: 0
  footer
    visibility: hidden;
@media screen and (max-width: 400px)
  .contenedor
    width: auto;
    max-width: 400px;
  .header
    background: rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0
    img
      width: 250px;
  .menu
    padding-top: 0px;
    margin-top: 0;
    position: relative;
    top: -20px;
    ul
      margin: 0
  .menu li
      margin-top: 0px;
  .menu ul li a p
    margin: 0
