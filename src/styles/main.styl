@import 'normalize'
body
  background: black
  font-family:  'Open Sans Condensed', sans-serif;

// Empieza
// Header
.header
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
.header img
  max-width: 800px;
.menu
  margin-top: 100px;
  max-width: 800px;
  display: inline-block;
  position: absolute;
  li
    display: inline-block;
    padding: 20px;
    cursor: pointer;
  a
    text-decoration: none;

    p
      color: white;
      font-size: 30px
      cursor: pointer;
//Body
.puntos_slider
  display:flex;
  img
    width: 1.5%
    height: 1.5%
    padding: 3px
// Footer
footer
  font-size: 20px;
  font-style: italic;
  color: white;
  display: inline-block;
footer .contenedor .logotipo  img
  max-width: 200px;
.redes
  img
    width: 3.5%
    height: 3.5%
    padding: 3px;

//common use
.contenedor
  display: flex;
  justify-content: center;
