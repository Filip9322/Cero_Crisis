@import 'normalize'
//common use
.contenedor
  display: flex;
  justify-content: center;

body
  background: black
  font-family:  'Open Sans Condensed', sans-serif;

// Empieza
// Header
.header
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
.header img
  max-width: 800px;
.menu
  margin-top: 100px;
  max-width: 800px;
  display: inline-block;
  position: absolute;
  li
    display: inline-block;
    padding: 20px;
    cursor: pointer;
  a
    text-decoration: none;

    p
      color: white;
      font-size: 30px
      cursor: pointer;
//Body
.puntos_slider
  position: absolute;
  bottom: 0
  display:flex;
  img
    width: 1.5%
    height: 1.5%
    padding: 3px
// Footer
footer
  width: 100%
  padding: 5px 20px;
  background: rgba(0,0,0,0.6);
  border: 2px solid lightblue;
  border-radius: 20px;
  position: absolute;
  bottom: 0
  left: auto;
  font-size: 20px;
  font-style: italic;
  color: white;

.contenedor__footer
  display: flex;
  justify-content: space-between;

.contenedor__footer.logotipo img
  width: 200px;

.contacto
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 50px;

  a
    text-decoration: none;
    cursor: pointer;
    color: white;
    text-shadow: rgb(160,160,160);

.redes
  a
    img
      width:  40px;
      height: 40px;
      padding: 3px;
